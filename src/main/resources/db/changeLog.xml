<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="truck" author="katja.danilova">
        <createTable tableName="truck">
            <column name="id" type="binary(16)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="platenumber" type="varchar(191)">
                <constraints nullable="false"/>
            </column>

            <column name="creatorId" type="binary(16)">
                <constraints nullable="false"/>
            </column>
            <column name="createdAt" type="datetime(6)">
                <constraints nullable="false"/>
            </column>
            <column name="lastModifierId" type="binary(16)">
                <constraints nullable="false"/>
            </column>
            <column name="modifiedAt" type="datetime(6)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="trailer" author="katja.danilova">
        <createTable tableName="trailer">
            <column name="id" type="binary(16)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="platenumber" type="varchar(191)">
                <constraints nullable="false"/>
            </column>

            <column name="creatorId" type="binary(16)">
                <constraints nullable="false"/>
            </column>
            <column name="createdAt" type="datetime(6)">
                <constraints nullable="false"/>
            </column>
            <column name="lastModifierId" type="binary(16)">
                <constraints nullable="false"/>
            </column>
            <column name="modifiedAt" type="datetime(6)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="vehicles" author="katja danilova">
        <createTable tableName="vehicle">
            <column name="id" type="binary(16)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="truck_id" type="binary(16)">
                <constraints nullable="false" foreignKeyName="FK_VEHICLE_TRUCK_ID" referencedColumnNames="id" referencedTableName="truck"/>
            </column>

            <column name="creatorId" type="binary(16)">
                <constraints nullable="false"/>
            </column>
            <column name="createdAt" type="datetime(6)">
                <constraints nullable="false"/>
            </column>
            <column name="lastModifierId" type="binary(16)">
                <constraints nullable="false"/>
            </column>
            <column name="modifiedAt" type="datetime(6)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="trailervehicle">
            <column name="id" type="binary(16)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
           <column name="vehicle_id" type="binary(16)">
                <constraints nullable="false" foreignKeyName="FK_TRAILERVEHICLE_VEHICLE_ID" referencedColumnNames="id" referencedTableName="vehicle"/>
            </column>
            <column name="trailer_id" type="binary(16)">
                <constraints nullable="false" foreignKeyName="FK_TRAILERVEHICLE_TRAILER_ID" referencedColumnNames="id" referencedTableName="trailer"/>
            </column>
            <column name="ordernumber" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="unique_plate_numbers" author="katja_danilova">
        <addUniqueConstraint tableName="trailer" columnNames="platenumber"/>
        <addUniqueConstraint tableName="truck" columnNames="platenumber"/>
    </changeSet>
</databaseChangeLog>